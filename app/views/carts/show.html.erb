<% if @cart.empty? %>
  <h5>Your cart is empty.</h5>
<% else %>
  <h3>Your cart:</h3>
  <ul>
  <% @cart.items.each do |item,quantity| %>
    <li id="cart-item-<%=item.id%>">
    <%=item.name%>: <%=quantity%><BR>
    <%= form_tag "/cart", method: "post" do |f| %>
      <%= hidden_field_tag :item_id, item.id %>
      <%= hidden_field_tag :adding, 0 %>
      <%= label_tag(:quantity, "Quantity:") %>
      <%= select_tag(:quantity, options_for_select(0..item.inventory)) %>
      <%= submit_tag "Change" %>
    <% end %>
    <%= form_tag "/cart", method: "post" do |f| %>
      <%= hidden_field_tag :item_id, item.id %>
      <%= hidden_field_tag :adding, 0 %>
      <%= label_tag(:quantity, "Quantity:") %>
      <%= hidden_field :quantity, 0 %>
      <%= submit_tag "Remove" %>
    <% end %>
    </li>
  <% end %>
  </ul>
  <%= link_to "Empty", cart_path, method: :delete %> 
  <% if current_user %>
    <%= link_to "Check Out", checkout_path, method: :post %>
  <% else %>
    <p>You must <%= link_to "login", login_path %> or <%= link_to "register", register_path %> to check out.</p>
  <% end %>
<% end %>

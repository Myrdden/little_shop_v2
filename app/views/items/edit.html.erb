<%= form_for @item, url: items_path, method: "post" do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :price %>
<%= f.text_field :price %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.label :image_url %>
<%= f.text_field :image_url %>
<%= f.label :inventory %>
<%= f.text_field :inventory %>
<%= f.submit "Update Item" %>
<% end %>

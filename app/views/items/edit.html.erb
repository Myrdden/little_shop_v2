<%= form_for @item, url: item_path(@item.id), method: "post" do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :price %>
<%= f.text_field :price %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.label :image %>
<%= f.text_field :image %>
<%= f.label :inventory %>
<%= f.text_field :inventory %>
<%= f.submit "Update Item" %>
<% end %>

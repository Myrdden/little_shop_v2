<h2>Add Item:</h2>

<%= form_for @item, url: items_path, method: "post" do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "Add Item" %>
<% end %>

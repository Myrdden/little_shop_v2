<div class="container">
  <h2>Add Item:</h2>

  <%= form_for @item, url: items_path, method: "post" do |f| %>
    <h4>Name:</h4>
    <%= f.text_field :name %>
    <h4>Price:</h4>
    <%= f.text_field :price %>
    <h4>Description</h4>
    <%= f.text_field :description %>
    <h4>Image Path:</h4>
    <%= f.text_field :image %>
    <h4>Inventory</h4>
    <%= f.text_field :inventory %>
    <%= f.submit "Add Item", class: "btn", style: "margin-top: 2rem" %>
  <% end %>
</div>

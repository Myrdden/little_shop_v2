<img src="<%= @item.image %>">
<h2><%= @item.name %></h2>
<p>Description: <%= @item.description %></p>
<p>Seller: <%= @item.user.name %></p>
<p>Available: <%= @item.inventory %></p>
<p>Price: <%= number_to_currency(@item.price) %></p>

<section class="add-to-cart">
  <%= form_tag "/users", method: "post" do |f| %>

  <%= hidden_field :item_id, @item.id %>

  <%= label_tag(:quantity, "Quantity:") %>
  <%= select_tag(:quantity, options_for_select(0..@item.inventory)) %>

  <%= submit_tag "Add to Cart" %>
  <% end %>
</section>

<div class="container">
  <h2>Edit Address:</h2>

  <%= form_for @address, url: address_path(@address.id), method: "post" do |f| %>
    <h4>Name:</h4>
    <%= f.text_field :name, size: "40" %>
    <h4>Address:</h4>
    <%= f.text_field :address, size: "40" %>
    <h4>City, State, Zip:</h4>
    <div class="row">
      <div class="col s6" style="padding: 0">
        <%= f.text_field :city, size: "32" %>
      </div>

      <div class="col s2" style="padding: 0">
        <%= f.select :state, %w(AK AL AR AZ CA CO CT DC DE FL GA HI IA ID IL IN KS KY LA MA MD ME MI MN MO MS MT NC ND NE NH NJ NM NV NY OH OK OR PA RI SC SD TN TX UT VA VT WA WI WV WY) %><br>
      </div>
      <div class="col s4" style="padding: 0">
        <%= f.text_field :zip, size: "40" %><br>
      </div>
    </div>
    <%= f.submit "Update Address", class: "btn", style: "margin-top: 2rem" %>
  <% end %>
</div>
